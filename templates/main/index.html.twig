{% extends 'main/base.html.twig' %}
{% block title %} Home {% endblock %}
{% block body %}


    <div id="first-container" class="container-fluid">
        <div class="row no-gutters" >
            <div class="col-12 col-lg-6 col-md-6">
                <h1 class="display-4">
                    Home
                </h1>
            </div>
        </div>
    </div>

    {% if campaignlist is defined and campaignlist is not null %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    {% for campaign in campaignlist %}
                        <div class="card" id="card-campaign">
                            <h5 class="card-header">{{ campaign.name }}</h5>
                            <div class="card-body">
                                <h6 class="card-text">{{ campaign.categories }}</h6>
                                <p class="card-text">{{ campaign.shortDescription }}</p>
                                <small style="color: grey;">By {{ campaign.user.name }}</small> </br>
                                <a style="margin-top:1%;" href="show/campaign/{{ campaign.id }}" class="btn btn-success">Go to campaing!</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% else %}
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6 col-md-6">
                    <h3>No campaign</h3>
                </div>
            </div>
        </div>
    {% endif %}
<div id="pagination" class="container-fluid">
    {{ knp_pagination_render(campaignlist) }}
</div>
{% endblock %}